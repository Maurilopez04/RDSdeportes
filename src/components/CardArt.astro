---
interface Props {
	title: string;
	desc: string;
    img: string;
    url: string;
}

const { title, desc, img,url } = Astro.props;
---
<div class="w-auto max-sm:mx-8 md:w-80 max-sm:p-5 bg-white rounded-lg shadow-md transform hover:scale-105 transition-transform duration-300 ease-in-out">
    <img class="w-full h-40 object-cover rounded-t-lg " alt="Card Image" src={`${img}`}>
    <div class="p-4">
        <h2 class="text-xl  font-semibold text-black">{title}</h2>
        <p class="text-gray-600">{desc}</p>
        <div class="flex justify-between items-center mt-4">
            <a href={`${url}`} class="bg-red-500 hover:bg-blue-600 text-white px-4 py-2 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-400">Ver articulo</a>
        </div>
    </div>
</div>